<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="logPath">target/plagiarism-logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %r [%t] %p %c %x - %m%n"/>
        </Console>
        <RollingFile name="rollingFile" fileName="${logPath}/plagiarism-log.log"
                     filePattern="${logPath}/plagiarism-log_%d{yyyy-MM-dd}.log">
            <PatternLayout
                    pattern="%r [%t] %p %c %x - %m%n" />
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy interval="1"
                                           modulate="true" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="org.springframework.web" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="rollingFile" />
        </Logger>
        <Logger name="org.hibernate" level="error" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="rollingFile" />
        </Logger>
        <Root level="Info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="rollingFile" />
        </Root>
    </Loggers>
</Configuration>